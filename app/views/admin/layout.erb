<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0" />
    <title>Admin / <%= Conf[:title] %></title>

    <%= tag 'link', nil, :href => '/admin.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css', :invalidate => :href %>

    <%= tag 'script', '', :src => '/lib.js', :type => 'text/javascript', :invalidate => :src %>
    <%= tag 'script', '', :src => '/admin.js', :type => 'text/javascript', :invalidate => :src %>
  </head>

  <body>
    <header>
      <ul id="nav" class="shiny">
      <% if signed_in? %>
      <% nav.each do |title, path, selected| %>
        <li><a href="<%= path %>"<%= ' class="selected"' if selected %>><%= title %></a></li>
      <% end %>
        <li>&nbsp;</li>
        <li><a href="/admin/logout">Logout</a></li>
      <% end %>
        <li><a href="/">View Site</a></li>
      </ul>
    </header>

    <div id="main">
<%= yield %>
    </div>

    <div id="overlay" class="overlay">
      <div class="contentWrap"></div>
    </div>
  </body>
</html>
