<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0" />
    <title><%= title + ' / ' if title %><%= E[:title] %></title>

    <%= tag 'script', '', :src => '/javascripts/lib.js', :invalidate => :src %>

    <%= tag 'link', nil, :href => "/stylesheets/themes/#{E[:theme]}.css", :media => 'screen', :rel => 'stylesheet', :type => 'text/css', :invalidate => :href %>
    <link href="/posts.atom" rel="alternate" title="ATOM" type="application/atom+xml">
    <link href="/icon.png" rel="icon" type="image/png">
  </head>

  <body>
    <header id="dox">
      <h1><a href="/"><%= E[:title] %></a></h1>
      <span class="meta"><%= E[:tagline] %></span>

      <div id="links">
      <% header_links.each do |title, url| %>
        <span class="link"><span class="large">&gt; </span><%= link_to title, url %></span>
      <% end %>

        <div class="large">
          <br />
        <% Tag.ordered.each do |tag| %>
          <span class="link">&gt; <%= link_to tag.name, "/#{tag}" %></span>
        <% end %>
        </div>
      </div>

      <div class="large meta sink">
        <a class="obfuscated"><%= obfuscate E[:author][:email] %></a><br />
        <a href="http://github.com/jhollinger/eridu">powered by eridu</a>
      </div>
    </header>

    <section id="main-container">
      <div id="main">
<%= yield %>
      </div>
    </section>
  </body>
</html>
