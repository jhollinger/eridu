<h1>Your pages</h1>

<div class="box">
<% if @pages.any? %>
  <table>
    <tr class="shiny">
      <th>Title</th>
      <th>Excerpt</th>
      <th>Edited</th>
      <th></th>
    </tr>

  <% today = Date.today %>
  <% @pages.each do |page| %>
    <tr>
      <td><%= link_to page.title, page_path(page) %></td>
      <td><%= h page.blurb %></td>
      <td class="light"><%= page.updated_at.strftime("%b %e#{', %Y' unless page.updated_at.year == today.year}") %></td>
      <td>
        <%= link_to icon_tag(:edit), admin_page_path(page) %>
        <%= link_to icon_tag(:delete), admin_page_path(page), :method => :delete, :confirm => "Are you sure you want to delete #{page.title}" %>
      </td>
    </tr>
  <% end %>
  </table>
<% else %>
  <em class="light">You have not created any pages</em>
<% end %>
</div>
