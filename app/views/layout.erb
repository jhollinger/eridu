<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0" />
    <title><%= title + ' / ' if title %><%= Conf[:title] %></title>
    <link href="/posts.atom" rel="alternate" title="ATOM" type="application/atom+xml">
    <link href="/front.css" media="screen" rel="stylesheet" type="text/css">
    <script src="/lib.js" type="text/javascript"></script> 
  </head>

  <body>
    <header id="dox">
      <h1><a href="/"><%= Conf[:title] %></a></h1>
      <p><%= Conf[:tagline] %></p>

      <div id="links" class="large">
      <% header_links.each do |title, url| %>
        &gt; <%= link_to title, url %><br />
      <% end %>

        <br />

      <% Tag.ordered.each do |tag| %>
        &gt; <%= link_to tag.name, "/#{tag}" %><br />
      <% end %>
      </div>

      <div id="links-small" class="small">
      <% header_links.each do |title, url| %>
        <span class="link"><%= link_to title, url %></span>
      <% end %>
      </div>

      <div class="large sink">
        <a href="http://github.com/jhollinger/eridu">powered by eridu</a>
      </div>
    </header>

    <section id="main-container">
      <div id="main">
<%= yield %>
      </div>
    </section>

  </body>
</html>
